<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="TruckStats.MainPage">

    <StackLayout Padding="20">
        <Label Text="TruckStats"
               FontSize="32"
               HorizontalOptions="Center" />

        <Button Text="Add Fuel Entry"
                Clicked="OnAddFuelButtonClicked" />

        <Button Text="Get Fuel Stats"
                Clicked="OnGetFuelStatsButtonClicked" />
    </StackLayout>

</ContentPage>
